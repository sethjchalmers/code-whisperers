# Environment Configuration for Agent-to-Agent Pipeline
# Copy this file to .env and fill in your values

# =============================================================================
# LLM Configuration
# =============================================================================

# LLM Provider: openai, anthropic, or azure
LLM_PROVIDER=openai

# OpenAI Configuration
OPENAI_API_KEY=your-openai-api-key-here

# Anthropic Configuration (if using Anthropic)
# ANTHROPIC_API_KEY=your-anthropic-api-key-here

# Azure OpenAI Configuration (if using Azure)
# AZURE_OPENAI_API_KEY=your-azure-openai-api-key-here
# AZURE_OPENAI_ENDPOINT=https://your-resource.openai.azure.com/

# Model Configuration
LLM_MODEL=gpt-4-turbo-preview
LLM_TEMPERATURE=0.1

# =============================================================================
# Git Configuration
# =============================================================================

# Path to the git repository to review (defaults to current directory)
GIT_REPO_PATH=.

# Base branch to compare against
GIT_BASE_BRANCH=main

# =============================================================================
# Review Configuration
# =============================================================================

# Maximum file size to review (in KB)
MAX_FILE_SIZE_KB=500

# Run agents in parallel (true/false)
PARALLEL_AGENTS=true

# =============================================================================
# Testing Configuration
# =============================================================================

# Enable end-to-end tests
ENABLE_E2E_TESTS=true

# Test timeout in seconds
TEST_TIMEOUT_SECONDS=300

# =============================================================================
# Output Configuration
# =============================================================================

# Output format: markdown, json, text
OUTPUT_FORMAT=markdown

# Save reports to disk
SAVE_REPORTS=true

# Reports directory
REPORTS_DIR=./reports

# =============================================================================
# Logging
# =============================================================================

# Log level: DEBUG, INFO, WARNING, ERROR
LOG_LEVEL=INFO
